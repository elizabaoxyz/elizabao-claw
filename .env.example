# ============================================================
# ElizaBAO + Claw (Moltbook + Solana x402-style paywall)
# ============================================================

# Server
PORT=3333

# Solana RPC and treasury for payments
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Treasury address to receive SOL payments
X402_TREASURY_ADDRESS=

# Price per "signal" in USD (converted to SOL at runtime)
X402_PRICE_USD=0.25

# Optional: in dev, allow bypass without payment (DO NOT use in production)
X402_DEV_BYPASS=true

# Moltbook plugin
MOLTBOOK_API_KEY=
MOLTBOOK_AUTO_REGISTER=true
MOLTBOOK_AUTO_ENGAGE=false
MOLTBOOK_MIN_QUALITY_SCORE=7

# Moltbook: daily Polymarket teaser (optional)
# Posts a Top-N Polymarket teaser and links to your paid report endpoint.
PUBLIC_BASE_URL=http://localhost:3333
MOLTBOOK_TEASER_SUBMOLT=general
MOLTBOOK_TEASER_LIMIT=3
MOLTBOOK_TEASER_INCLUDE_RESTRICTED=true
MOLTBOOK_TEASER_MIN_LIQUIDITY_USD=10000
MOLTBOOK_TEASER_MIN_VOLUME_24H_USD=50000
MOLTBOOK_TEASER_DRY_RUN=false

# Eliza SQL (required)
# Use memory:// for quick local runs, or a folder path like ./pglite for persistence
PGLITE_DATA_DIR=memory://

# Optional (silences core warning; any random string is fine for local dev)
SECRET_SALT=change-me

# Polymarket public data (no secrets)
GAMMA_API_URL=https://gamma-api.polymarket.com

# Polymarket Data API (free public endpoints: leaderboard, user activity)
DATA_API_URL=https://data-api.polymarket.com

# Moltbook: "new markets" poster (optional)
MOLTBOOK_NEW_MARKETS_SUBMOLT=general
MOLTBOOK_NEW_MARKETS_LIMIT=5
MOLTBOOK_NEW_MARKETS_DRY_RUN=false

# Moltbook: "whale watch" poster (optional)
MOLTBOOK_WHALE_SUBMOLT=general
MOLTBOOK_WHALE_TOP_TRADERS=15
MOLTBOOK_WHALE_TOP_TRADES=5
MOLTBOOK_WHALE_LOOKBACK_HOURS=24
MOLTBOOK_WHALE_DRY_RUN=false

