# ============================================================
# ElizaBAO + Claw (Moltbook + Solana x402-style paywall)
# ============================================================

# Server
PORT=3333

# Solana RPC and treasury for payments
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Treasury address to receive SOL payments
X402_TREASURY_ADDRESS=

# Price per "signal" in USD (converted to SOL at runtime)
X402_PRICE_USD=0.25

# Optional: in dev, allow bypass without payment (DO NOT use in production)
X402_DEV_BYPASS=true

# Moltbook plugin
MOLTBOOK_API_KEY=
MOLTBOOK_AUTO_REGISTER=true
MOLTBOOK_AUTO_ENGAGE=false
MOLTBOOK_MIN_QUALITY_SCORE=7

# Eliza SQL (required)
# Use memory:// for quick local runs, or a folder path like ./pglite for persistence
PGLITE_DATA_DIR=memory://

# Optional (silences core warning; any random string is fine for local dev)
SECRET_SALT=change-me

# Polymarket public data (no secrets)
GAMMA_API_URL=https://gamma-api.polymarket.com

